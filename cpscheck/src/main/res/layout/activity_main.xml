<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">


    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="solo"
            android:id="@+id/buttons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="204dp"
            android:layout_marginStart="160dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="double"
            android:id="@+id/buttond"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="340dp"
            android:layout_marginStart="160dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>
    <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powered by Mr_LHBH"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="624dp" android:layout_marginStart="4dp" android:id="@+id/textView"/>
    <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有误差,取决于屏幕刷新速度等"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="608dp" android:layout_marginStart="4dp" android:textSize="10sp"
            android:id="@+id/textView2"/>

</androidx.constraintlayout.widget.ConstraintLayout>